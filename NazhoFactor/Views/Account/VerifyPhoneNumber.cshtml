@{
    ViewData["Title"] = "تأیید شماره تلفن";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">تأیید شماره تلفن</div>
                <div class="card-body">
                    <p>کد تأییدیه ارسال شده به تلفن همراه خود را وارد کنید.</p>
                    <form asp-action="ConfirmPhoneNumber" method="post">
                        <div class="mb-3">
                            <label for="VerificationCode" class="form-label">کد تأیید</label>
                            <input type="text" class="form-control" id="VerificationCode" name="VerificationCode" required>
                        </div>
                        <input type="hidden" name="UserId" value="@ViewBag.UserId" />
                        <button type="submit" class="btn btn-primary">تأیید</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
